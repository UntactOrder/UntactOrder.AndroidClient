<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".androidclient.MainActivity"
        android:fillViewport="true"
        android:id="@+id/main_scroller">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_layout">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/main_header"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHeight_min="wrap"
                app:layout_constraintWidth_min="wrap">

            <ImageView
                    android:id="@+id/main_iv_linear_logo"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart"
                    android:contentDescription="@string/app_name"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    app:srcCompat="@drawable/ic_linear_logo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toStartOf="@+id/main_tv_logo_guide"
                    app:layout_constraintHorizontal_bias="0.0"/>

            <TextView
                    android:text="@string/at_main_logo_guide_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_tv_logo_guide"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/main_iv_linear_logo"
                    app:layout_constraintBottom_toBottomOf="@+id/main_iv_linear_logo"
                    android:gravity="center_vertical|end"
                    android:textSize="12sp"
                    android:fontFamily="@font/nanumbarungothicultralight"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/signature_text"
                    app:layout_constrainedWidth="true"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/main_body"
                app:layout_constraintTop_toBottomOf="@+id/main_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/main_footer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHeight_min="wrap"
                app:layout_constraintVertical_bias="1.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_container_slogan"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/main_guideline_end"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toTopOf="@+id/main_container_userinfo"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintVertical_bias="0.0">


                <TextView
                        android:text="@string/at_main_slogan_thin_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/main_tv_slogan_thin"
                        android:gravity="start|center_vertical"
                        android:textSize="24sp"
                        android:fontFamily="@font/nanumbarungothicultralight"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="2dp"
                        android:textColor="@color/signature_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:paddingTop="40dp"/>

                <TextView
                        android:text="@string/at_main_slogan_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/main_tv_slogan"
                        android:gravity="start|center_vertical"
                        android:textSize="24sp"
                        android:fontFamily="@font/nanumbarungothicbold"
                        android:paddingStart="20dp"
                        android:paddingTop="2dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/signature_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/main_tv_slogan_thin"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_container_ordermenu"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/main_guideline_start"
                    android:background="@drawable/shape_rect_all_corner"
                    android:backgroundTint="@color/signature_grey"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:elevation="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/main_container_slogan"
                    app:layout_constraintBottom_toTopOf="@+id/main_container_userinfo"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintHeight_min="wrap">

                <TextView
                        android:text="@string/at_main_ordermenu_title_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/main_tv_ordermenu_title"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:textSize="20sp"
                        android:fontFamily="@font/nanumbarungothic"
                        android:textColor="@color/signature_text"
                        android:gravity="clip_vertical|start"/>

                <TextView
                        android:text="@string/at_main_ordermenu_guide_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/main_tv_ordermenu_guide"
                        app:layout_constraintTop_toTopOf="@+id/main_tv_ordermenu_title"
                        android:textSize="12sp"
                        android:fontFamily="@font/nanumbarungothicultralight"
                        android:textColor="@color/signature_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/main_tv_ordermenu_title"
                        app:layout_constraintHorizontal_bias="1.0"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toBottomOf="@+id/main_tv_ordermenu_title"
                        android:gravity="center_vertical|end"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/shape_rect_all_corner"
                        android:backgroundTint="@color/signature_purple"
                        android:elevation="5dp"
                        android:id="@+id/main_widget_ordermenu_storeinfo"
                        app:layout_constraintTop_toBottomOf="@+id/main_tv_ordermenu_guide"
                        android:layout_marginTop="6dp"
                        app:layout_constraintWidth_percent="0.3"
                        >

                    <TextView
                            android:text="@string/at_main_ordermenu_store_msg"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:id="@+id/main_tv_ordermenu_store"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:textSize="14sp"
                            android:fontFamily="@font/nanumbarungothic"
                            android:textColor="@color/white"
                            android:gravity="center|fill_vertical"
                            android:layout_gravity="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            app:layout_constrainedHeight="true"
                            app:layout_constrainedWidth="true"
                            tools:ignore="TextContrastCheck"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/shape_rect_all_corner"
                        android:backgroundTint="@color/signature_green"
                        android:elevation="5dp"
                        android:id="@+id/main_widget_ordermenu_orderplacement"
                        app:layout_constraintTop_toBottomOf="@+id/main_tv_ordermenu_guide"
                        android:layout_marginTop="6dp"
                        app:layout_constraintStart_toEndOf="@+id/main_widget_ordermenu_storeinfo"
                        android:layout_marginStart="16dp"
                        app:layout_constraintHorizontal_bias="1.0"
                        android:paddingBottom="12dp"
                        >

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_outline_qr_code_24"
                            android:id="@+id/main_iv_ordermenu_orderplacement_icon"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:ignore="ImageContrastCheck"
                            android:contentDescription="@string/at_main_ordermenu_orderplacement_msg"
                            android:layout_marginTop="12dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:tint="@color/white"
                            android:scaleType="fitCenter"
                            app:layout_constraintHeight_min="50dp"/>

                    <TextView
                            android:text="@string/at_main_ordermenu_orderplacement_msg"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/main_tv_ordermenu_orderplacement"
                            app:layout_constraintStart_toStartOf="parent"
                            android:textSize="20sp"
                            android:fontFamily="@font/nanumbarungothic"
                            android:textColor="@color/white"
                            android:gravity="center|fill_vertical"
                            android:layout_gravity="center"
                            app:layout_constraintTop_toBottomOf="@+id/main_iv_ordermenu_orderplacement_icon"
                            tools:ignore="TextContrastCheck"
                            app:layout_constrainedHeight="true"
                            app:layout_constrainedWidth="true"
                            android:layout_marginEnd="12dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="12dp"
                            app:layout_goneMarginBottom="12dp"
                            />

                    <View
                            android:id="@+id/main_div_ordermenu_orderplacement_center"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/listDivider"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@+id/main_tv_ordermenu_orderplacement"
                            android:layout_marginTop="12dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginEnd="12dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="12dp"
                            android:id="@+id/main_list_ordermenu_orderlist"
                            android:visibility="gone"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintTop_toBottomOf="@+id/main_tv_ordermenu_orderplacement"
                            android:layout_marginTop="12dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/shape_rect_all_corner"
                        android:backgroundTint="@color/signature_red"
                        android:elevation="5dp"
                        android:id="@+id/main_widget_ordermenu_location"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp"
                        >

                    <TextView
                            android:text="@string/at_main_ordermenu_location_title_msg"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/main_tv_ordermenu_location_title"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:textSize="20sp"
                            android:fontFamily="@font/nanumbarungothic"
                            android:textColor="@color/white"
                            android:gravity="center|fill_vertical"
                            android:layout_weight="5"
                            tools:ignore="TextContrastCheck"
                            />

                    <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/main_div_ordermenu_location_middle"
                            android:layout_weight="0.2"
                            />

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/main_bt_ordermenu_location_map"
                            android:layout_weight="5"
                            >

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_baseline_pin_drop_24"
                                android:id="@+id/main_iv_ordermenu_location_map_icon"
                                tools:ignore="ImageContrastCheck"
                                android:contentDescription="@string/at_main_ordermenu_location_map_msg"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                android:tint="@color/white"
                                android:scaleType="fitCenter"
                                android:layout_gravity="center"
                                android:minHeight="50dp"
                                android:minWidth="50dp"/>

                        <TextView
                                android:text="@string/at_main_ordermenu_location_map_msg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/main_tv_ordermenu_location_map_title"
                                android:textSize="12sp"
                                android:fontFamily="@font/nanumbarungothic"
                                android:textColor="@color/white"
                                android:gravity="center|fill_vertical"
                                android:layout_gravity="center"
                                tools:ignore="TextContrastCheck"
                                app:layout_constrainedHeight="true"
                                app:layout_constrainedWidth="true"
                                android:layout_marginEnd="6dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="6dp"
                                />
                    </LinearLayout>

                    <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/main_div_ordermenu_location_start"
                            android:layout_weight="0.1"
                            />

                    <View
                            android:id="@+id/main_div_ordermenu_location_divider"
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:background="?android:attr/listDivider"
                            android:layout_weight="0"/>

                    <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/main_div_ordermenu_location_end"
                            android:layout_weight="0.1"
                            />

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/main_bt_ordermenu_location_list"
                            android:layout_weight="5"
                            >

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_baseline_fork_right_24"
                                android:id="@+id/main_iv_ordermenu_location_list_icon"
                                tools:ignore="ImageContrastCheck"
                                android:contentDescription="@string/at_main_ordermenu_location_list_msg"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                android:tint="@color/white"
                                android:scaleType="fitCenter"
                                android:layout_gravity="center"
                                android:minHeight="50dp"
                                android:minWidth="50dp"/>

                        <TextView
                                android:text="@string/at_main_ordermenu_location_list_msg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/main_tv_ordermenu_location_list_title"
                                android:textSize="12sp"
                                android:fontFamily="@font/nanumbarungothic"
                                android:textColor="@color/white"
                                android:gravity="center|fill_vertical"
                                android:layout_gravity="center"
                                tools:ignore="TextContrastCheck"
                                app:layout_constrainedHeight="true"
                                app:layout_constrainedWidth="true"
                                android:layout_marginEnd="6dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="6dp"
                                />
                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_container_userinfo"
                    android:background="@drawable/shape_rect_all_corner"
                    android:backgroundTint="@color/signature_grey"
                    android:elevation="5dp"
                    app:layout_constraintEnd_toStartOf="@+id/main_guideline_end"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="14dp"
                    >

                <TextView
                        android:text="@string/at_main_userinfo_title_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/main_tv_userinfo_title"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:textSize="20sp"
                        android:fontFamily="@font/nanumbarungothic"
                        android:textColor="@color/signature_text"
                        android:gravity="clip_vertical|start"/>

                <TextView
                        android:text="@string/at_main_userinfo_guide_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/main_tv_userinfo_guide"
                        app:layout_constraintTop_toTopOf="@+id/main_tv_userinfo_title"
                        android:textSize="12sp"
                        android:fontFamily="@font/nanumbarungothicultralight"
                        android:textColor="@color/signature_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/main_tv_userinfo_title"
                        app:layout_constraintHorizontal_bias="1.0"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toBottomOf="@+id/main_tv_userinfo_title"
                        android:gravity="center_vertical|end"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/main_tv_userinfo_guide"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/shape_rect_all_corner"
                        android:backgroundTint="@color/signature_yellow"
                        android:elevation="5dp"
                        android:id="@+id/main_widget_userinfo_common"
                        android:layout_marginTop="6dp">

                    <TextView
                            android:text="+82 10-0000-0000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/main_tv_userinfo_phone"
                            android:textSize="12sp"
                            android:fontFamily="@font/nanumbarungothiclight"
                            android:textColor="@color/at_main_userinfo_common_text"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="12dp"
                            app:layout_constrainedWidth="true"
                            android:gravity="start|center_vertical"
                            app:layout_constraintTop_toBottomOf="@+id/main_tv_userinfo_username"
                            app:layout_constraintStart_toEndOf="@+id/main_iv_userinfo_profile"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="4dp"
                            app:layout_constraintHorizontal_bias="0.0"
                            tools:ignore="HardcodedText"/>

                    <TextView
                            android:text="username@domain.ex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/main_tv_userinfo_email"
                            android:textSize="12sp"
                            android:fontFamily="@font/nanumbarungothiclight"
                            android:textColor="@color/at_main_userinfo_common_text"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constrainedWidth="true"
                            android:gravity="start|center_vertical"
                            app:layout_constraintTop_toBottomOf="@+id/main_tv_userinfo_phone"
                            app:layout_constraintStart_toEndOf="@+id/main_iv_userinfo_profile"
                            android:layout_marginStart="10dp"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="12dp"
                            tools:ignore="HardcodedText"
                            app:layout_constraintVertical_bias="0.0"
                            android:layout_marginEnd="12dp"
                            android:paddingBottom="4dp"/>

                    <TextView
                            android:text="USER"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/main_tv_userinfo_username"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="12dp"
                            android:textSize="20sp"
                            android:fontFamily="@font/nanumbarungothicbold"
                            android:textColor="@color/at_main_userinfo_common_text"
                            android:gravity="clip_vertical|start"
                            app:layout_constraintStart_toEndOf="@+id/main_iv_userinfo_profile"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            android:layout_marginStart="10dp"
                            app:layout_constrainedHeight="true"
                            tools:ignore="HardcodedText"
                            android:layout_marginEnd="12dp"
                            android:paddingTop="4dp"/>

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintDimensionRatio="H,1:1"
                            android:id="@+id/main_iv_userinfo_profile"
                            android:background="@drawable/shape_circle"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="12dp"
                            app:srcCompat="@drawable/ic_baseline_account_circle_24"
                            android:scaleType="centerCrop"
                            app:layout_constraintBottom_toBottomOf="@+id/main_tv_userinfo_email"
                            app:layout_constraintTop_toTopOf="@+id/main_tv_userinfo_username"
                            android:contentDescription="@string/at_main_userinfo_profile_content_description"
                            android:backgroundTint="@color/white"
                            android:tint="@color/black"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_rect_all_corner"
                        android:backgroundTint="@color/signature_white"
                        android:elevation="5dp"
                        android:id="@+id/main_widget_userinfo_history"
                        app:layout_constraintTop_toBottomOf="@+id/main_widget_userinfo_common"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintVertical_bias="1.0">

                    <TextView
                            android:text="@string/at_main_userinfo_history_title_msg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/main_tv_userinfo_history_title"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="12dp"
                            android:textSize="16sp"
                            android:fontFamily="@font/nanumbarungothic"
                            android:textColor="@color/at_main_userinfo_common_text"
                            android:gravity="clip_vertical|start"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constrainedHeight="true"
                            android:layout_marginEnd="12dp"
                            app:layout_constraintStart_toEndOf="@+id/main_iv_userinfo_history_icon"
                            android:layout_marginStart="10dp"/>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/main_tv_userinfo_history_body"
                            app:layout_constraintTop_toBottomOf="@+id/main_tv_userinfo_history_title"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginBottom="12dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="6dp"
                            android:layout_marginEnd="12dp"
                            app:layout_constraintStart_toEndOf="@+id/main_iv_userinfo_history_icon"
                            app:layout_constraintHorizontal_bias="0.0"
                            android:layout_marginStart="10dp">

                        <TextView
                                android:text="0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/main_tv_userinfo_history_count_value"
                                android:textSize="36sp"
                                android:fontFamily="@font/nanumbarungothicbold"
                                android:textColor="@color/signature_yellow"
                                android:gravity="start|center_vertical"
                                tools:ignore="HardcodedText,TextContrastCheck"
                                android:layout_marginStart="10dp"
                                android:textAlignment="textEnd"
                                android:layout_gravity="bottom"/>

                        <TextView
                                android:text="@string/at_main_userinfo_history_count_msg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/main_tv_userinfo_history_count"
                                android:textSize="12sp"
                                android:fontFamily="@font/nanumbarungothiclight"
                                android:textColor="@color/black"
                                android:gravity="start|center_vertical"
                                android:layout_marginStart="2dp"
                                android:layout_gravity="bottom"/>

                        <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:id="@+id/main_div_userinfo_history_start"
                                android:layout_weight="1"/>

                        <View
                                android:id="@+id/main_tv_userinfo_history_divider"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="?android:attr/listDivider"
                                />

                        <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:id="@+id/main_div_userinfo_history_end"
                                android:layout_weight="1"/>

                        <TextView
                                android:text="0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/main_tv_userinfo_history_storecount_value"
                                android:textSize="36sp"
                                android:fontFamily="@font/nanumbarungothicbold"
                                android:textColor="@color/signature_yellow"
                                android:gravity="start|center_vertical"
                                tools:ignore="HardcodedText,TextContrastCheck"
                                />

                        <TextView
                                android:text="@string/at_main_userinfo_history_storecount_msg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/main_tv_userinfo_history_storecount"
                                android:textSize="12sp"
                                android:fontFamily="@font/nanumbarungothiclight"
                                android:textColor="@color/black"
                                android:gravity="start|center_vertical"
                                android:layout_marginStart="2dp"/>

                        <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:id="@+id/main_div_userinfo_history_foot"
                                android:layout_weight="2"/>

                    </LinearLayout>

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:id="@+id/main_iv_userinfo_history_icon"
                            app:srcCompat="@drawable/ic_baseline_history_edu_24"
                            android:scaleType="centerCrop"
                            android:contentDescription="@string/at_main_userinfo_profile_content_description"
                            android:tint="@color/white"
                            android:layout_weight="2"
                            android:layout_gravity="center_horizontal|fill_horizontal|center_vertical|fill_vertical"
                            android:background="@drawable/shape_rect_all_corner"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="@+id/main_tv_userinfo_history_body"
                            app:layout_constraintTop_toTopOf="@+id/main_tv_userinfo_history_title"
                            android:layout_marginStart="12dp"
                            android:backgroundTint="@color/signature_yellow"
                            android:padding="4dp"
                            app:layout_constraintDimensionRatio="H,1:1"
                            android:elevation="5dp"
                            tools:ignore="ImageContrastCheck"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_guideline_end"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="1.0"/>

            <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_guideline_start"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.0"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/main_footer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >

            <TextView
                    android:text="@string/at_main_footer_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_tv_footer"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="11sp"
                    android:fontFamily="@font/nanumbarungothicultralight"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="20dp"
                    android:textColor="@color/signature_text"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    android:ellipsize="marquee"
                    />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>