<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"

              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"

              android:background="#F1F2F4">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="5dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:id="@+id/linearLayout">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/menu_tx_name"
                    android:background="#3A3947"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:padding="15dp"
                    android:layout_marginEnd="6dp"
                    android:textSize="20sp"
                    android:layout_weight="1.4"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#3A3947"
                    android:id="@+id/menu_tx_price"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:textSize="20sp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="6dp"
                    android:layout_gravity="bottom|start"
                    android:layout_weight="0.5"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/linearLayout4"
                    >

                <TextView
                        android:text="-"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/menu_tx_minus"
                        android:background="@drawable/shape_circle_plus_minus_25"
                        android:layout_margin="4dp"/>

                <TextView
                        android:layout_margin="6dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#3A3947"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/menu_tx_quantity"
                        android:textStyle="bold"
                        android:layout_weight="1"/>

                <TextView
                        android:text="+"
                        android:layout_gravity="center"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/menu_tx_plus"
                        android:background="@drawable/shape_circle_plus_minus_25"
                        android:layout_margin="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
